<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <template id="report_letter_authority_document">
            <t t-set="doc" t-value="doc.with_context({'lang':doc.partner_id.lang})" />
            <div class="page">
                <div class="oe_structure"/>
                <div class="row">
                    <div class="col-xs-6 text-left">
                        <strong>
                            <span t-field="doc.company_id.name"/><br/>
                            <t t-if="doc.company_id.partner_id.zip"><t t-esc="doc.company_id.partner_id.zip"/>, </t>
                            <t t-if="doc.company_id.partner_id.state_id"><t t-esc="doc.company_id.partner_id.state_id.name"/>, </t>
                            <t t-if="doc.company_id.partner_id.city"><t t-esc="doc.company_id.partner_id.city"/>, </t>
                            <t t-if="doc.company_id.partner_id.street"><t t-esc="doc.company_id.partner_id.street"/></t>
                            <t t-if="doc.company_id.partner_id.street2">, <t t-esc="doc.company_id.partner_id.street2"/></t>
                        </strong><br/>
                        <div>підприємство-одержувач і його адреса</div>
                        <div class="mt4">
                            <span t-if="doc.company_id.company_registry">Ідентифікаційний код ЄДРПОУ </span>
                            <strong t-if="doc.company_id.company_registry" t-esc="doc.company_id.company_registry"/>
                        </div>
                        <strong>
                            <span t-field="doc.company_id.name"/><br/>
                            <t t-if="doc.company_id.partner_id.zip"><t t-esc="doc.company_id.partner_id.zip"/>, </t>
                            <t t-if="doc.company_id.partner_id.state_id"><t t-esc="doc.company_id.partner_id.state_id.name"/>, </t>
                            <t t-if="doc.company_id.partner_id.city"><t t-esc="doc.company_id.partner_id.city"/>, </t>
                            <t t-if="doc.company_id.partner_id.street"><t t-esc="doc.company_id.partner_id.street"/></t>
                            <t t-if="doc.company_id.partner_id.street2">, <t t-esc="doc.company_id.partner_id.street2"/></t>
                        </strong><br/>
                        <div>підприємство-платник і його адреса</div>
                        <div t-if="doc.company_id.bank_journal_ids" class="mt4">
                            <t t-if="doc.company_id.bank_journal_ids" t-foreach="doc.company_id.bank_journal_ids" t-as="b">
                                <div>рахунок <strong t-field="b.bank_account_id"/></div>
                                <div>
                                    <strong t-field="b.bank_id.bic"/>
                                    <strong t-field="b.bank_id.name"/>
                                </div>
                            </t>
                        </div>
                    </div>
                    <div class="col-xs-6 text-center">
                        <div class="col-xs-12 text-center">
                            <span>Типова форма № М-2</span>
                        </div>
                        <div class="col-xs-12 text-center">
                            <div class="mt32">Довіреність дійсна до</div>
                            <strong t-field="doc.la_valid_until" t-field-options='{"format": "dd.MM.YYYY"}'/>
                        </div>
                    </div>
                </div>
                <div class="row" style="padding-top:3px;">
                    <div class="col-xs-12 text-center">
                        <h3>Довіреність №<span t-field="doc.la_number"/></h3>
                        <div>
                            <span>Дата видачі </span>
                            <strong t-field="doc.la_issue_date" t-field-options='{"format": "dd.MM.YYYY"}'/>
                        </div>
                    </div>
                </div>

                <t t-if="doc.partner_id.parent_id" t-set="partner" t-value="doc.partner_id.parent_id" />
                <t t-else="" t-set="partner" t-value="doc.partner_id"/>

                <div class="row mt32">
                    <div class="col-xs-2"><span>Видано</span></div>
                    <div class="col-xs-10">
                        <strong>
                            <span t-if="doc.la_employee_id.job_id" t-field="doc.la_employee_id.job_id.name"/>
                            <span t-field="doc.la_employee_id.name"/>
                        </strong>
                    </div>
                </div>
                <div class="row mt4">
                    <div class="col-xs-4"><span>Документ, що засвідчує особу</span></div>
                    <div class="col-xs-8">
                        <strong>
                            <span t-field="doc.la_employee_id.passport_type"/>
                        </strong>
                    </div>
                </div>
                <div class="row mt4">
                    <div class="col-xs-1"><span>серія</span></div>
                    <div class="col-xs-1">
                        <strong>
                            <span t-field="doc.la_employee_id.passport_series"/>
                        </strong>
                    </div>
                    <div class="col-xs-1 text-right"><span>№</span></div>
                    <div class="col-xs-3">
                        <strong>
                            <span t-field="doc.la_employee_id.passport_id"/>
                        </strong>
                    </div>
                    <div class="col-xs-1 text-right"><span>від</span></div>
                    <div class="col-xs-5">
                        <strong>
                            <span t-field="doc.la_employee_id.passport_issue_date" t-field-options='{"format": "dd.MM.YYYY"}'/>
                        </strong>
                    </div>
                </div>
                <div class="row mt4">
                    <div class="col-xs-2"><span>Виданий</span></div>
                    <div class="col-xs-10">
                        <strong>
                            <span t-field="doc.la_employee_id.passport_issued_by"/>
                        </strong>
                    </div>
                </div>
                <div class="row mt4">
                    <div class="col-xs-3"><span>На отримання від</span></div>
                    <div class="col-xs-9">
                        <strong>
                            <span t-esc="partner.name"/>
                        </strong>
                    </div>
                </div>
                <div class="row mt4">
                    <div class="col-xs-2"><span>цінностей за</span></div>
                    <div class="col-xs-10">
                        <strong>
                            <span t-field="doc.reference"/><span> від </span>
                            <span t-field="doc.date_invoice" t-field-options='{"format": "dd.MM.YYYY"}'/>
                        </strong>
                    </div>
                </div>
                <div class="row mt8">
                    <div class="col-xs-12"><span>Перелік цінностей, які належить отримати:</span></div>
                </div>

                <div class="row mt16">
                    <div class="col-xs-12" >
                        <small>
                            <table class="table table-bordered">
                                <tr style="font-weight:bold;">
                                    <th class="text-center"><span>NN п/п</span></th>
                                    <th class="text-center">Найменування цінностей</th>
                                    <th class="text-center">Од. вимiру</th>
                                    <th class="text-center">Кількість (прописом)</th>
                                </tr>
                                <t t-set="counter" t-value="1" />
                                <t t-foreach="doc.invoice_line_ids" t-as="il">
                                    <tr >
                                        <td class="text-center" style="padding:2px 8px;"><span><t t-esc="counter"/></span></td>
                                        <td style="padding:2px 8px;"><span t-field="il.product_id.name"/></td>
                                        <td class="text-center" style="padding:2px 8px;"><span t-field="il.uom_id.name"/></td>
                                        <td class="text-center" style="padding:2px 8px;"><span t-if="qty_char[doc.id][il.id]" t-esc="qty_char[doc.id][il.id]" /></td>
                                    </tr>
                                    <t t-set="counter" t-value="counter+1" />
                                </t>
                            </table>
                        </small>
                    </div>
                </div>

                <div class="row mt8">
                    <div class="col-xs-2"><span>Підпис</span></div>
                    <div class="col-xs-8" style="border-bottom: 1px solid black;">&amp;nbsp;</div>
                    <div class="col-xs-2"><span>засвідчую</span></div>
                </div>
                <div class="row">
                    <div class="col-xs-12 text-center">
                        <small>(зразок підпису особи, що одержала довіреність)</small>
                    </div>
                </div>

                <div class="row mt4">
                    <div class="col-xs-3"><span>Керівник підприємства</span></div>
                    <div class="col-xs-9">
                        <strong>
                            <span t-field="doc.la_director_id.name"/>
                        </strong>
                    </div>
                </div>

                <div class="row mt4">
                    <div class="col-xs-3"><span>Головний бухгалтер</span></div>
                    <div class="col-xs-9">
                        <strong>
                            <span t-field="doc.la_accountant_id.name"/>
                        </strong>
                    </div>
                </div>

                <div class="row mt32">
                    <div class="col-xs-12"><span>Місце печатки</span></div>
                </div>

            </div>
    </template>

    <template id="report_la">
        <t t-call="report.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="l10n_ua_letter_authority.report_letter_authority_document" t-lang="doc.partner_id.lang"/>
            </t>
        </t>
    </template>

</odoo>
