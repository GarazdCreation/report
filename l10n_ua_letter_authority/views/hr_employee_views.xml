<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_employee_form_inherit_l10n_ua_letter_authority" model="ir.ui.view">
        <field name="name">view.employee.form.inherit.l10n.ua.letter.authority</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='passport_id']" position="replace"/>
            <xpath expr="//page[@name='personal_information']//group//group[1]" position="after">
                <group name="passport" string="Passport">
                    <field name="passport_type"/>
                    <field name="passport_series"/>
                    <field name="passport_id"/>
                    <field name="passport_issue_date"/>
                    <field name="passport_issued_by"/>
                </group>
            </xpath>
        </field>
    </record>

</odoo>
